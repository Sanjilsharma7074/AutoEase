<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= typeof title !== 'undefined' ? title : 'AutoLease' %>
    </title>
    <meta name="theme-color" content="#0E5AE0" />
    <!-- Inter font & icons -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Leaflet for maps in details modal -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-sA+e2j3f3u7kGm8f7v5YtFQm0u3sYk6bY1Yp8aH2B6k=" crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-o9N1j7kGk4gkP3n1s2kK6xG3s5t1Z6s7j2b8f3g4h5k=" crossorigin=""></script>
  </head>
  <body>
    <header class="site-header">
      <div class="nav-inner">
        <a class="brand" href="/"><i class="fas fa-car fa-lg"></i> AutoLease</a>
        <ul class="nav-menu" role="navigation" aria-label="Primary">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/cars">Vehicles</a></li>
          <li class="nav-item" id="bookings-link" style="display:none"><a class="nav-link" href="/bookings">My Bookings</a></li>
          <li class="nav-item"><a class="nav-link" href="/login" id="login-link">Login</a></li>
          <li class="nav-item"><a class="nav-link" href="/signup" id="signup-link">Sign Up</a></li>
        </ul>
        <div class="hamburger" aria-hidden="true" aria-label="Toggle menu">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>
      </div>
    </header>

    <main>
      <% if (typeof content !== 'undefined') { %> <%- content %> <% } %>
    </main>

    <footer class="footer">
      <div class="footer-container">
        <p>&copy; 2025 AutoLease. All rights reserved.</p>
      </div>
    </footer>

    <script src="/js/auth.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
