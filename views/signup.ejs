<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Car Rental Service â€“ Sign Up</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
</head>

<body>

<!-- SAME HEADER SYSTEM AS LOGIN -->
<header class="site-header">
  <div class="nav-inner">
    <a class="brand" href="/"><i class="fas fa-car"></i> CarRental</a>

    <ul class="nav-menu">
      <li><a class="nav-link" href="/">Home</a></li>
      <li><a class="nav-link" href="/cars">Cars</a></li>
      <li><a class="nav-link" href="/login">Login</a></li>
      <li><a class="nav-link active" href="/signup">Sign Up</a></li>
    </ul>

    <div class="hamburger">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </div>
  </div>
</header>

<main>
  <div class="container">
    <div class="auth-container">
      <div class="auth-form">
        <h2>Sign Up</h2>

        <div id="message"></div>

        <!-- Google Signup -->
        <a href="/auth/google?flow=signup" class="btn btn-google">
          <i class="fab fa-google"></i> Sign up with Google
        </a>

        <div class="or-divider">OR</div>

        <form id="signupForm">
          <div class="form-group">
            <label>Full Name</label>
            <input type="text" id="name" required />
          </div>

          <div class="form-group">
            <label>Email</label>
            <input type="email" id="email" required />
          </div>

          <div class="form-group">
            <label>Password</label>
            <input type="password" id="password" required />
          </div>

          <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>

        <p class="auth-link">
          Already have an account? <a href="/login">Login here</a>
        </p>
      </div>
    </div>
  </div>
</main>

<footer class="site-footer">
  <p>&copy; 2025 Car Rental Service. All rights reserved.</p>
</footer>

<script src="/js/auth.js"></script>
<script src="/js/main.js"></script>
<script src="/socket.io/socket.io.js"></script>

<script>
document.getElementById("signupForm").addEventListener("submit", async (e) => {
  e.preventDefault();

  const name = document.getElementById("name").value;
  const email = document.getElementById("email").value;
  const password = document.getElementById("password").value;
  const role = "user";
  const messageDiv = document.getElementById("message");

  if (email.toLowerCase() === "sanjilsharma456@gmail.com") {
    messageDiv.innerHTML =
      '<div class="error">This email is reserved for the Super Administrator account.</div>';
    setTimeout(() => location.href = "/login", 3000);
    return;
  }

  try {
    const res = await fetch("/auth/signup", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ name, email, password, role })
    });

    const data = await res.json();

    if (res.ok) {
      messageDiv.innerHTML =
        '<div class="success">OTP sent to your email. Redirecting...</div>';
      setTimeout(() => {
        location.href = `/verify-otp?email=${encodeURIComponent(email)}`;
      }, 2000);
    } else {
      messageDiv.innerHTML = `<div class="error">${data.message}</div>`;
    }
  } catch {
    messageDiv.innerHTML =
      '<div class="error">Network error. Please try again.</div>';
  }
});
</script>

</body>
</html>
