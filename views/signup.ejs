<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Car Rental Service – Sign Up</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
</head>

<body>

<!-- SAME HEADER SYSTEM AS LOGIN -->
<header class="site-header">
  <div class="nav-inner">
    <a class="brand" href="/"><i class="fas fa-car"></i> CarRental</a>

    <ul class="nav-menu">
      <li><a class="nav-link" href="/">Home</a></li>
      <li><a class="nav-link" href="/cars">Cars</a></li>
      <li><a class="nav-link" href="/login">Login</a></li>
      <li><a class="nav-link active" href="/signup">Sign Up</a></li>
    </ul>

    <div class="hamburger">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </div>
  </div>
</header>

<main>
  <div class="container">
    <div class="auth-container">
      <div class="auth-form">
        <h2>Sign Up</h2>

        <div id="message"></div>

        <!-- Google Signup -->
        <a href="/auth/google?flow=signup" class="btn btn-google">
          <i class="fab fa-google"></i> Sign up with Google
        </a>

        <div class="or-divider">OR</div>

        <form id="signupForm">
          <div class="form-group">
            <label>Full Name</label>
            <input type="text" id="name" required />
          </div>

          <div class="form-group">
            <label>Email</label>
            <input type="email" id="email" required />
          </div>

          <div class="form-group">
            <label>Phone (optional — include country code, e.g. +1...)</label>
            <input type="tel" id="phone" placeholder="+1234567890" />
          </div>

          <div class="form-group">
            <label>Password</label>
            <input type="password" id="password" required />
          </div>

          <div style="display:flex;gap:10px;align-items:center;">
            <button type="button" id="signupEmailBtn" class="btn btn-primary">Send OTP via Email</button>
            <button type="button" id="signupSmsBtn" class="btn btn-primary">Send OTP via SMS</button>
          </div>
        </form>

        <p class="auth-link">
          Already have an account? <a href="/login">Login here</a>
        </p>
      </div>
    </div>
  </div>
</main>

<footer class="site-footer">
  <p>&copy; 2025 Car Rental Service. All rights reserved.</p>
</footer>

<script src="/js/auth.js"></script>
<script src="/js/main.js"></script>
<script src="/socket.io/socket.io.js"></script>

<script>
(() => {
  const nameEl = document.getElementById("name");
  const emailEl = document.getElementById("email");
  const phoneEl = document.getElementById("phone");
  const passwordEl = document.getElementById("password");
  const messageDiv = document.getElementById("message");

  const signupEmailBtn = document.getElementById('signupEmailBtn');
  const signupSmsBtn = document.getElementById('signupSmsBtn');

  const disableBtns = (v) => { signupEmailBtn.disabled = signupSmsBtn.disabled = v; };

  const sendRequest = async (method) => {
    // method: 'email' or 'sms'
    const name = nameEl.value;
    const email = emailEl.value;
    const phone = phoneEl.value || undefined;
    const password = passwordEl.value;
    const role = 'user';

    if (email.toLowerCase() === 'sanjilsharma456@gmail.com') {
      messageDiv.innerHTML = '<div class="error">This email is reserved for the Super Administrator account.</div>';
      setTimeout(() => location.href = '/login', 3000);
      return;
    }

    disableBtns(true);
    const prevEmailText = signupEmailBtn.textContent;
    const prevSmsText = signupSmsBtn.textContent;
    if (method === 'email') signupEmailBtn.textContent = 'Sending...';
    else signupSmsBtn.textContent = 'Sending...';

    try {
      const res = await fetch('/auth/signup', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name, email, phone, password, role, method })
      });
      const data = await res.json();
      if (res.ok) {
        messageDiv.innerHTML = `<div class="success">${data.message}</div>`;
        setTimeout(() => {
          if (method === 'sms' && phone) window.location.href = `/verify-otp?phone=${encodeURIComponent(phone)}`;
          else window.location.href = `/verify-otp?email=${encodeURIComponent(email)}`;
        }, 900);
      } else {
        messageDiv.innerHTML = `<div class="error">${data.message}</div>`;
        signupEmailBtn.textContent = prevEmailText;
        signupSmsBtn.textContent = prevSmsText;
        disableBtns(false);
      }
    } catch (err) {
      messageDiv.innerHTML = '<div class="error">Network error. Please try again.</div>';
      signupEmailBtn.textContent = prevEmailText;
      signupSmsBtn.textContent = prevSmsText;
      disableBtns(false);
    }
  };

  signupEmailBtn.addEventListener('click', () => sendRequest('email'));
  signupSmsBtn.addEventListener('click', () => sendRequest('sms'));
})();
</script>

</body>
</html>
