    <script src="/js/main.js"></script>
    <script>
      let allAdmins = [];
      let deleteTargetId = null;
      let deleteTargetName = null;

      // Toast Notification System
      function showToast(message, type = "info", title = "") {
        const toastContainer = document.getElementById("toastContainer");
        const toast = document.createElement("div");
        toast.className = `toast ${type}`;

        const icons = {
          success: "fa-check-circle",
          error: "fa-exclamation-circle",
          info: "fa-info-circle",
        };

        const titles = {
          success: title || "Success",
          error: title || "Error",
          info: title || "Info",
        };

        toast.innerHTML = `
          <div class="toast-icon">
            <i class="fas ${icons[type]}"></i>
          </div>
          <div class="toast-content">
            <div class="toast-title">${titles[type]}</div>
            <div class="toast-message">${message}</div>
          </div>
          <button class="toast-close" onclick="this.parentElement.remove()">
            <i class="fas fa-times"></i>
          </button>
        `;

        toastContainer.appendChild(toast);

        setTimeout(() => {
          toast.style.animation = "slideInRight 0.3s ease-out reverse";
          setTimeout(() => toast.remove(), 300);
        }, 5000);
      }

      // Modal Functions
      function showModal(adminId, adminName) {
        deleteTargetId = adminId;
        deleteTargetName = adminName;
        document.getElementById(
          "modalMessage"
        ).textContent = `Are you sure you want to delete "${adminName}"? This action cannot be undone.`;
        document.getElementById("confirmModal").classList.add("active");
      }

      function closeModal() {
        document.getElementById("confirmModal").classList.remove("active");
        deleteTargetId = null;
        deleteTargetName = null;
      }

      // Form Validation
      const nameInput = document.getElementById("adminName");
      const emailInput = document.getElementById("adminEmail");
      const passwordInput = document.getElementById("adminPassword");
      const togglePassword = document.getElementById("togglePassword");

      // Real-time name validation
      nameInput.addEventListener("input", function () {
        const value = this.value.trim();
        const validation = document.getElementById("nameValidation");

        if (value.length === 0) {
          this.classList.remove("valid", "invalid");
          validation.innerHTML = "";
        } else if (value.length < 3) {
          this.classList.add("invalid");
          this.classList.remove("valid");
          validation.innerHTML =
            '<i class="fas fa-times-circle"></i> Name must be at least 3 characters';
          validation.className = "validation-message error";
        } else {
          this.classList.add("valid");
          this.classList.remove("invalid");
          validation.innerHTML =
            '<i class="fas fa-check-circle"></i> Looks good!';
          validation.className = "validation-message success";
        }
      });

      // Real-time email validation
      emailInput.addEventListener("input", function () {
        const value = this.value.trim();
        const validation = document.getElementById("emailValidation");
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

        if (value.length === 0) {
          this.classList.remove("valid", "invalid");
          validation.innerHTML = "";
        } else if (!emailRegex.test(value)) {
          this.classList.add("invalid");
          this.classList.remove("valid");
          validation.innerHTML =
            '<i class="fas fa-times-circle"></i> Please enter a valid email address';
          validation.className = "validation-message error";
        } else {
          this.classList.add("valid");
          this.classList.remove("invalid");
          validation.innerHTML =
            '<i class="fas fa-check-circle"></i> Email is valid';
          validation.className = "validation-message success";
        }
      });

      // Password strength checker
      passwordInput.addEventListener("input", function () {
        const value = this.value;
        const strengthBar = document.getElementById("passwordStrengthBar");
        const validation = document.getElementById("passwordValidation");
        const hint = document.getElementById("passwordHint");

        if (value.length === 0) {
          strengthBar.className = "password-strength-bar";
          this.classList.remove("valid", "invalid");
          validation.innerHTML = "";
          hint.classList.remove("visible");
          return;
        }

        // Calculate strength
        let strength = 0;
        if (value.length >= 6) strength++;
        if (value.length >= 10) strength++;
        if (/[a-z]/.test(value) && /[A-Z]/.test(value)) strength++;
        if (/[0-9]/.test(value)) strength++;
        if (/[^a-zA-Z0-9]/.test(value)) strength++;

        if (value.length < 6) {
          strengthBar.className = "password-strength-bar weak";
          this.classList.add("invalid");
          this.classList.remove("valid");
          validation.innerHTML =
            '<i class="fas fa-times-circle"></i> Password must be at least 6 characters';
          validation.className = "validation-message error";
        } else if (strength <= 2) {
          strengthBar.className = "password-strength-bar weak";
          this.classList.add("valid");
          this.classList.remove("invalid");
          validation.innerHTML =
            '<i class="fas fa-shield-alt"></i> Weak password';
          validation.className = "validation-message error";
        } else if (strength <= 3) {
          strengthBar.className = "password-strength-bar medium";
          this.classList.add("valid");
          this.classList.remove("invalid");
          validation.innerHTML =
            '<i class="fas fa-shield-alt"></i> Medium strength';
          validation.className = "validation-message";
          validation.style.color = "#ed8936";
        } else {
          strengthBar.className = "password-strength-bar strong";
          this.classList.add("valid");
          this.classList.remove("invalid");
          validation.innerHTML =
            '<i class="fas fa-check-circle"></i> Strong password';
          validation.className = "validation-message success";
          hint.classList.add("visible");
        }
      });

      // Toggle password visibility
      togglePassword.addEventListener("click", function () {
        const type = passwordInput.type === "password" ? "text" : "password";
        passwordInput.type = type;
        this.classList.toggle("fa-eye");
        this.classList.toggle("fa-eye-slash");
      });

      // Load existing admin accounts
      async function loadAdmins() {
        try {
          const token = localStorage.getItem("token");
          const response = await fetch("/auth/admins", {
            headers: { Authorization: `Bearer ${token}` },
          });

          if (response.ok) {
            allAdmins = await response.json();
            displayAdmins(allAdmins);
          } else {
            document.getElementById("adminsList").innerHTML =
              '<div class="empty-state"><div class="empty-illustration">⚠️</div><h3>Failed to Load</h3><p>Could not load admin accounts. Please refresh the page.</p></div>';
          }
        } catch (error) {
          console.error("Error loading admins:", error);
          document.getElementById("adminsList").innerHTML =
            '<div class="empty-state"><div class="empty-illustration">⚠️</div><h3>Connection Error</h3><p>Unable to connect to the server. Please check your connection.</p></div>';
        }
      }

      function updateStats(admins) {
        document.getElementById("totalAdmins").textContent = admins.length;
      }

      function displayAdmins(admins) {
        const adminsList = document.getElementById("adminsList");

        if (admins.length === 0) {
          adminsList.innerHTML = `
            <div class="empty-state">
              <div class="empty-illustration">
                <i class="fas fa-users-slash"></i>
              </div>
              <h3>No Admin Accounts Yet</h3>
              <p>Get started by creating your first admin account using the form above.</p>
              <button class="btn-empty-action" onclick="document.getElementById('adminName').focus()">
                <i class="fas fa-plus-circle"></i> Create First Admin
              </button>
            </div>
          `;
          return;
        }

        adminsList.innerHTML =
          `<div class="admins-grid">` +
          admins
            .map((admin, index) => {
              const initials = admin.name
                .split(" ")
                .map((n) => n[0])
                .join("")
                .toUpperCase()
                .substring(0, 2);

              const createdDate = new Date(admin.createdAt).toLocaleDateString(
                "en-US",
                {
                  month: "short",
                  day: "numeric",
                  year: "numeric",
                }
              );

              return `
              <div class="admin-card" style="animation-delay: ${index * 0.1}s">
                <div class="admin-header">
                  <div class="admin-avatar">${initials}</div>
                  <div class="admin-info">
                    <div class="admin-name">${admin.name}</div>
                    <div class="admin-email">${admin.email}</div>
                  </div>
                </div>
                
                <div class="admin-status active">
                  <i class="fas fa-circle"></i> Active
                </div>

                <div class="admin-meta">
                  <div class="admin-meta-item tooltip" data-tooltip="Created Date">
                    <i class="fas fa-calendar-alt"></i>
                    <span>${createdDate}</span>
                  </div>
                  <div class="admin-meta-item tooltip" data-tooltip="User Role">
                    <i class="fas fa-shield-alt"></i>
                    <span>Admin</span>
                  </div>
                </div>

                <div class="admin-actions">
                  <button class="btn-action btn-edit tooltip" data-tooltip="Edit Admin" onclick="editAdmin('${
                    admin._id
                  }')">
                    <i class="fas fa-edit"></i>
                  </button>
                  <button class="btn-action btn-disable tooltip" data-tooltip="Disable Admin" onclick="disableAdmin('${
                    admin._id
                  }')">
                    <i class="fas fa-user-slash"></i>
                  </button>
                  <button class="btn-action btn-delete tooltip" data-tooltip="Delete Admin" onclick="showModal('${
                    admin._id
                  }', '${admin.name}')">
                    <i class="fas fa-trash-alt"></i>
                  </button>
                </div>
              </div>
            `;
            })
            .join("") +
          `</div>`;
      }

      // Create new admin account
      document
        .getElementById("createAdminForm")
        .addEventListener("submit", async (e) => {
          e.preventDefault();

          const name = nameInput.value.trim();
          const email = emailInput.value.trim();
          const password = passwordInput.value;
          const submitBtn = document.getElementById("submitBtn");

          // Validate
          if (name.length < 3) {
            showToast(
              "Name must be at least 3 characters",
              "error",
              "Validation Error"
            );
            return;
          }

          if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
            showToast(
              "Please enter a valid email address",
              "error",
              "Validation Error"
            );
            return;
          }

          if (password.length < 6) {
            showToast(
              "Password must be at least 6 characters",
              "error",
              "Validation Error"
            );
            return;
          }

          submitBtn.disabled = true;
          submitBtn.innerHTML =
            '<i class="fas fa-spinner fa-spin"></i> Creating...';

          try {
            const token = localStorage.getItem("token");
            const response = await fetch("/auth/create-admin", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
                Authorization: `Bearer ${token}`,
              },
              body: JSON.stringify({ name, email, password }),
            });

            const data = await response.json();

            if (response.ok) {
              showToast(
                `Admin account for ${name} created successfully!`,
                "success",
                "Account Created"
              );
              document.getElementById("createAdminForm").reset();

              // Reset validation states
              nameInput.classList.remove("valid", "invalid");
              emailInput.classList.remove("valid", "invalid");
              passwordInput.classList.remove("valid", "invalid");
              document.getElementById("nameValidation").innerHTML = "";
              document.getElementById("emailValidation").innerHTML = "";
              document.getElementById("passwordValidation").innerHTML = "";
              document.getElementById("passwordStrengthBar").className =
                "password-strength-bar";

              loadAdmins();
            } else {
              showToast(
                data.message || "Failed to create admin account",
                "error",
                "Creation Failed"
              );
            }
          } catch (error) {
            console.error("Error creating admin:", error);
            showToast(
              "Network error. Please check your connection and try again.",
              "error",
              "Connection Error"
            );
          } finally {
            submitBtn.disabled = false;
            submitBtn.innerHTML =
              '<i class="fas fa-plus-circle"></i> Create Admin Account';
          }
        });

      // Delete admin account
      document
        .getElementById("confirmDeleteBtn")
        .addEventListener("click", async function () {
          if (!deleteTargetId) return;

          this.disabled = true;
          this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Deleting...';

          try {
            const token = localStorage.getItem("token");
            const response = await fetch(`/auth/admin/${deleteTargetId}`, {
              method: "DELETE",
              headers: { Authorization: `Bearer ${token}` },
            });

            const data = await response.json();

            if (response.ok) {
              showToast(
                `Admin "${deleteTargetName}" has been deleted successfully`,
                "success",
                "Admin Deleted"
              );
              closeModal();
              loadAdmins();
            } else {
              showToast(
                data.message || "Failed to delete admin",
                "error",
                "Deletion Failed"
              );
            }
          } catch (error) {
            console.error("Error deleting admin:", error);
            showToast(
              "Network error. Please try again.",
              "error",
              "Connection Error"
            );
          } finally {
            this.disabled = false;
            this.innerHTML = "Delete Admin";
          }
        });

      // Placeholder functions for edit and disable
      function editAdmin(adminId) {
        showToast("Edit functionality coming soon!", "info", "Feature Preview");
      }

      function disableAdmin(adminId) {
        showToast(
          "Disable functionality coming soon!",
          "info",
          "Feature Preview"
        );
      }

      // Close modal on overlay click
      document
        .getElementById("confirmModal")
        .addEventListener("click", function (e) {
          if (e.target === this) closeModal();
        });

      // Load admins on page load
      document.addEventListener("DOMContentLoaded", () => {
        loadAdmins();
      });
    </script>
